<% post ||= nil %>

<%= render 'shared/nav' %>
<section class='jumbotron text-center'>
  <h1 class='jumbotron-heading'><%= title %></h1>
  <% if post %>
    <p><%= link_to(body=fix_url(post.url), url=fix_url(post.url)) %></p>
    <p><%= "#{post.creator.username} #{post.created_at}" %></p>
  <% end %>
</section>
<%= render 'shared/flash' %>
