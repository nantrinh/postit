<% title = "Posts Tagged \"#{@category.name.capitalize}\"" %>
<%= render 'shared/header', title: title %>

<% posts = @category.posts %>
<section class="row justify-content-center"> 
  <% if posts.empty? %>
    No posts to show.
  <% else %>
    <% posts.each_with_index do |post, i| %>
      <%= render 'posts/post', post: post %>
    <% end %>
  <%end %>
</section>
